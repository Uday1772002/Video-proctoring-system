{
  "name": "video-proctoring-docker",
  "version": "1.0.0",
  "description": "Docker configuration for Video Proctoring System",
  "dockerComposeVersion": "3.8",
  "services": {
    "app": {
      "build": ".",
      "ports": ["5000:5000"],
      "environment": [
        "NODE_ENV=production",
        "MONGODB_URI=mongodb://mongo:27017/video_proctoring"
      ],
      "volumes": ["./uploads:/app/uploads", "./reports:/app/reports"],
      "depends_on": ["mongo"]
    },
    "mongo": {
      "image": "mongo:5.0",
      "ports": ["27017:27017"],
      "volumes": ["mongodb_data:/data/db"]
    }
  },
  "volumes": ["mongodb_data"]
}
